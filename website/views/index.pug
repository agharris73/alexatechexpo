extends layout

block content

    style(type='text/css').
        body {background-color: #324D5C;color: #fff;} 

    .well.text-center
      .container
        h2 #{textJumbotronHeader}

    .row
      p.text-center #{textDescription} 

      .col-md-4.col-md-offset-4(style='padding-top: 50px; padding-left: 50px; padding-right: 50px')
        form
          .col-md-12.text-center
            h4 #{labelCurrentBid}
            h1#bid-price #{labelBidPrice}
          .form-group
            label(for='text')
            input#bid-text.form-control(type='text')
          .col-md-12.text-center
            button.btn.btn-outline(type='submit') #{btnLabelBid}

      .counter-placement
          .clock

    footer
      p.left
        | #{iconResponse}
        | client_id: #{labelClientID} 
      
      p.center.cursive
        | made with 
        i.fa.fa-heart.icon(aria-hidden='true')
        |  by ip engineering