extends layout

block content

    style(type='text/css').
        body {background-color: #324D5C;color: #fff;} 

    .jumbotron.text-center(style='background-color: rgba(255,255,255, 0.1);')
      .container
        h2 #{jumbo-header}

    .row
      .col-md-4.col-md-offset-4(style='padding-top: 150px; padding-left: 50px; padding-right: 50px')
        form
          .col-md-12.text-center
            h4 #{curren-bid}
            h1 #{bid-price}
          .form-group
            label(for='text')
            input#text.form-control(type='text')
          .col-md-12.text-center
            button.btn.btn-outline(type='submit') #{btn-bid}

            .row
                .text-center(style='padding-top: 100px;')
                    <!-- span.circle-success #{success} something like that maybe? -->
                    span #{circle-success}
                    h5 #{client_id} 

    footer
      div(style='text-align:center')
        p
          | made with 
          i.fa.fa-heart.icon(aria-hidden='true') 
          |  by ip engineering